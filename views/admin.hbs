{{> adminheader}}

<div id="content">
    <div id="spacer"></div>

    <div class="admin-container">
        <!-- Left Side: Users List -->
        <div class="admin-section">
            <h2>Manage Users</h2>
            <ul class="user-list">
                {{#each users}}
                <li>
                    <div class="user-info">
                        <span>{{full_name}} ({{email}})</span>
                        <div class="admin-actions">
                            <form action="/edit-user/{{id}}" method="GET">
                                <button type="submit" class="btn-edit">Edit</button>
                            </form>
                            <form action="/delete-user/{{id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>

        <!-- Right Side: Posts List -->
        <div class="admin-section">
            <h2>Manage Posts</h2>
            <ul class="post-list">
                {{#each posts}}
                <li>
                    <div class="post-info">
                        <span>{{post_user}}: {{post_content}}</span>
                        <div class="admin-actions">
                            <form action="/edit-post/{{id}}" method="GET">
                                <button type="submit" class="btn-edit">Edit</button>
                            </form>
                            <form action="/delete-post/{{id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div id="spacer"></div>
</div>
